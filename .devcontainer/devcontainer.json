{
  "name": "Adyen MCP Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "cd typescript && npm install && npm run build",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot"
      ],
      "openFiles": [
        ".vscode/mcp.json"
      ]
    }
  },
  "remoteEnv": {
    "ADYEN_API_KEY": "${localEnv:ADYEN_API_KEY}"
  },
  "secrets": {
    "ADYEN_API_KEY": {
      "description": "Enter your ADYEN_API_KEY secret. Ensure that the roles required for your Web Service user, specified in the README, are correctly configured.",
      "documentationUrl": "https://docs.adyen.com/development-resources/api-credentials/#generate-api-key"
    }
  },
  "portsAttributes": {},
  "remoteUser": "root"
}
