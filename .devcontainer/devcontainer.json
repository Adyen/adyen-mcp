{
  "name": "Adyen MCP Codespace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "onCreateCommand": {
    "dependencies": "cd typescript && npm install"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "cd typescript && npm install && npm run build",
  "forwardPorts": [],
  "portsAttributes": {},
  "remoteUser": "vscode"
}
